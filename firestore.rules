rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Дозволяємо читати/писати userRoles тільки авторизованим користувачам
    match /userRoles/{email} {
      allow read, write: if request.auth != null;
    }
    
    // Telegram Users - читати/писати авторизованим (включаючи anonymous)
    match /telegramUsers/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Rooms - читати всім, писати тільки авторизованим
    match /rooms/{roomId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Дозволяємо читати bookings всім (для перевірки доступних слотів в Telegram)
    // Створення - авторизованим (включаючи anonymous) або з Telegram source
    match /bookings/{bookingId} {
      allow read: if true;
      allow delete: if request.auth != null;
      allow create: if request.auth != null || 
        (request.resource.data.source == 'telegram' && 
         request.resource.data.createdBy == 'telegram');
      allow update: if request.auth != null;
    }
    
    // Дозволяємо читати/писати settings тільки авторизованим користувачам
    match /settings/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Графік роботи - читати всі, писати тільки овнер
    match /schedule/{document} {
      allow read: if true;
      allow write: if request.auth != null &&
        exists(/databases/$(database)/documents/userRoles/$(request.auth.token.email)) &&
        get(/databases/$(database)/documents/userRoles/$(request.auth.token.email)).data.role == 'owner';
    }
    
    // Звіти - читати тільки авторизовані, писати тільки авторизовані
    match /reports/{reportId} {
      allow read, write: if request.auth != null;
    }
  }
}
